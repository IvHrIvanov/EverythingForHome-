@using ProjectEverything.Models.ElectricPart
@{
    ViewData["Title"] = "Add Parts";
}
@model AddPartFormModel
<div class="row">
    <div claa="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <h2 class="heading-margin text-center">Add Part</h2>
            <div class="form-group">
                <label asp-for="PartElectric">Part</label>
                <input asp-for="PartElectric" class="form-control" placeholder="Cabel,water...">
                <span asp-validation-for="PartElectric" class="small text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input onfocus=this.value="" asp-for="Price" class="form-control" placeholder="0.00-10.000">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity">Quantity</label>
                <input onfocus=this.value='' asp-for="Quantity" class="form-control" placeholder="0-100...">
                <span asp-validation-for="Quantity" class="small text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="CabelMeter">CabelMeter</label>
                <input onfocus=this.value='' asp-for="CabelMeter" class="form-control" placeholder="0.00-10.000">
                <span asp-validation-for="CabelMeter" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl">ImageUrl</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Insert your image URL address...">
                <span asp-validation-for="CabelMeter" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year">Year</label>
              <input asp-for="Year" class="form-control" placeholder="Insert your Year here.."/>
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Description here...">
                </textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
             
            <input class="btn btn-primary r" type="submit" value="Save">
        </form>
    </div>
</div>
@using ProjectEverything.Models.ElectricPart
@model ProductFormModel


@if (TempData.ContainsKey(WebConstants.GlobalMessage))
{
    <div class="alert alert-success" role="alert">@TempData[WebConstants.GlobalMessage] </div>
}
<h2 class="heading-margin text-center">Add Part</h2>


            <div class="form-group">
                <input asp-for="id" class="form-control" type="hidden">
            </div>

            <div class="form-group">
                <label asp-for="Part">Part</label>
                <input asp-for="Part" class="form-control" placeholder="part name...">
                <span asp-validation-for="Part" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input value="" asp-for="Price" class="form-control" placeholder="0.00-10.000">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity">Quantity</label>
                <input value="" asp-for="Quantity" class="form-control" placeholder="0-100...">
                <span asp-validation-for="Quantity" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl">ImageUrl</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Insert your image URL address...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year">Year</label>
                <input asp-for="Year" class="form-control" placeholder="Insert your Year here.." />
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Description here...">
                </textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>



@{
    ViewData["Title"] = "Register";
}
@model RegisterFormModel

<div class="row mt-5">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 ">
        <h2 class="text-center">Register</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group mt-5">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="ivan@aaa.bg" />
                <span asp-validation-for="Email" class="small text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Craete strong password!!!" />
                <span asp-validation-for="Password" class="small text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Ivan,Vicho..." />
                <span asp-validation-for="FirstName" class="small text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" placeholder="Ivanov,Velikov..." />
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Town"></label>
                <input asp-for="Town" class="form-control" placeholder="Provadia,Varna..." />
                <span asp-validation-for="Town" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" placeholder="Hristo Ganchev..." />
                <span asp-validation-for="Address" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary r mt-2" type="submit" value="Register" />
        </form>
    </div>
</div>